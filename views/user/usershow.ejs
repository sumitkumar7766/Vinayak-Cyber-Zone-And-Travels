<% layout("/layouts/boilerplateUser.ejs") %>

    <main>
        <hr>
        <div class="navArea">
            <form action="/user/userhome" method="get">
                <button class="btn btn-warning me-3" id="">Go Back !</button>
            </form>
        </div>
        <div id="ForshowtheToosl">
            <div>
                <div style="text-align: center;">
                    <h1 class="toolsHeading mt-2 mb-3">Tools</h1>
                </div>
            </div>
            <div style="display: flex; justify-content: center; width: 100%;">
                <div>
                    <table class="table table-dark table-bordered border-danger" style="width: 1500px;">
                        <thead>
                            <tr class="table-primary table-primary-headofthis">
                                <th style="width: 30%;">Tools Name</th>
                                <th style="width: 40%;">Tools Work</th>
                                <th style="width: 20%;">Working Button</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider border-danger">
                            <% for(sublisting of listing.sublisting) { %>
                                <tr class="table-info trbodyStyle">
                                    <td style="font-weight: bolder; font-size: 1.2rem;" class="pt-3 pb-3">
                                        <%= sublisting.name %>
                                    </td>
                                    <td class="pt-3 pb-3">
                                        <%= sublisting.work %>
                                    </td>
                                    <td class="pt-2 pb-2">
                                        <a href="<%= sublisting.link %>" target="_blank">
                                            <button class="btn btn-success">Apply !</button>
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>