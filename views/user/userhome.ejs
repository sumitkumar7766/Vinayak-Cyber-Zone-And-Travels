<% layout("/layouts/boilerplateUser.ejs") %>

<main class="container py-5">
    
    <div class="d-flex justify-content-end mb-4">
        <h4 class="text-info">
             Welcome: **<%= userdata.name %>**
        </h4>
    </div>

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-warning">Our All Services</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        <% for (listing of allListings) { %>
            <div class="col">
                <div class="card h-100 shadow-lg border-0 bg-white">
                    <div class="card-body d-flex flex-column  rounded-3">
                        
                        <h5 class="card-title text-black fw-bold">
                             <%= listing.title %>
                        </h5>
                        
                        <h6 class="card-subtitle mb-3 text-dark">
                            <%= listing.subtitle %>
                        </h6>
                        
                        <p class="card-text flex-grow-1 mb-3 text-dark">
                            <%= listing.description %>
                        </p>
                        
                        <form action="/user/listing/<%= listing._id %>" method="get" class="mt-2">
                            <button class="btn btn-success w-40">
                                <i class="bi bi-arrow-right-circle me-1"></i> Go !
                            </button>
                        </form>
                        
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</main>