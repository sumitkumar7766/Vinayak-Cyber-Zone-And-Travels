<% layout("/layouts/boilerplate.ejs") %>

    <main>
        <div class="row offset-3 mt-5 pb-5 mb-5 bgoflogindiv">
            <h1 class="offset-4 mb-5">User Log In</h1>
            <form class="col-10 offset-1 needs-validation" novalidate action="/user/login" method="post">
                <div class="mb-4">
                    <label for="" class="form-label">Enter Username</label>
                    <input type="username" class="form-control" id="exampleFormControlInput1"
                        placeholder="username@gmail.com" name="username" required>
                    <div id="passwordHelpBlock" class="form-text-light">
                        Your username is must be your email
                    </div>
                    <div class="valid-feedback">

                    </div>
                    <div class="invalid-feedback">
                        Please Enter You username
                    </div>
                </div>
                <div class="mb-4">
                    <label for="" class="form-label">Enter Password</label>
                    <input type="password" class="form-control" id="exampleFormControlTextarea1" rows="3" name="password" required>
                    <div id="passwordHelpBlock" class="form-text-light">
                        Your password must be 8-20 characters long, contain letters and numbers, @ , and must not
                        contain spaces, special characters, or emoji.
                    </div>
                    <div class="valid-feedback">

                    </div>
                    <div class="invalid-feedback">
                        Please Enter Your Passw
                    </div>
                </div>
                <div>
                    <input type="submit" name="login" value="Log In" class="btn btn-success offset-9 mt-3 loginbutton">
                </div>
                <br><br><br><br>
                <br>
                <hr>
            </form>

        </div>
    </main>