<% layout("/layouts/boilerplateOwner.ejs") %>

    <main class="container py-5">
    
    <div class="d-flex flex-wrap align-items-center mb-4">
        
        <form action="/owner/addlisting" method="get" class="me-2 mb-2">
            <button class="btn btn-success">
                <i class="bi bi-plus-circle-fill me-1"></i> Add Listing
            </button>
        </form>
    </div>

    <div class="text-center mb-5">
        <h1 class="display-4 text-warning fw-bolder">Our All Services</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        <% for (listing of allListings) { %>
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-dark fw-bold">
                            <%= listing.title %>
                        </h5>
                        <h6 class="card-subtitle mb-3 text-secondary">
                            <%= listing.subtitle %>
                        </h6>
                        <p class="card-text flex-grow-1 text-dark">
                            <%= listing.description %>
                        </p>
                        
                        <div class="mt-3">
                            <form action="/owner/listing/<%= listing._id %>" method="get" class="d-inline-block">
                                <button class="btn btn-success me-2">
                                    Go <i class="bi bi-arrow-right"></i>
                                </button>
                            </form>
                            
                            <div id="deletbtn" hidden class="d-inline-block">
                                <form method="post" action="/listing/<%= listing._id %>?_method=DELETE" class="d-inline-block me-2">
                                    <button class="btn btn-danger">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </button>
                                </form>
                                <form method="get" action="/listing/<%= listing._id %>/edit" class="d-inline-block">
                                    <button class="btn btn-outline-primary">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</main>

