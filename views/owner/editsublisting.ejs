<% layout("/layouts/boilerplateOwner.ejs") %>

<main>
    <div class="col-8 offset-2">
        <div class="offset-5 mt-5 mb-4 text-info text-decoration-underline">
            <h1>Edit Sublisting</h1>
        </div>
        <form action="/listing/sublisting/<%= sublistdata._id %>?_method=PUT" method="post" novalidate class="needs-validation" >
            <div class="mb-3">
                <label for="name" class="form-label">Tools Name</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= sublistdata.name %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter a title.
                </div>
            </div>
            <div class="mb-3">
                <label for="work" class="form-label">Tools Work</label>
                <input type="text" name="work" id="work" class="form-control" value="<%= sublistdata.work %>" required></input>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter a Description.
                </div>
            </div>
            <div class="mb-3">
                <label for="link" class="form-label">Working Link</label>
                <input type="text" name="link" id="link" class="form-control" value="<%= sublistdata.link %>" required></input>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter a Description.
                </div>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Agree to terms and conditions
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <button class="btn btn-success mt-2">Save Sublisting</button>
            <a href="/listing/admin"><p class="btn btn-danger ms-2 mt-4">Cancle</p></a>
            </form>
            </div>
</main>