<% layout("/layouts/boilerplateOwner.ejs") %>

<main class="container my-5">
    
    <div class="row">
        <div class="col-lg-12">
            
            <div class="text-center mb-5">
                <h1 class="display-6 fw-bold text-warning border-bottom border-secondary pb-2">Edit Sublisting</h1>
            </div>
            
            <form action="/listing/sublisting/<%= sublistdata._id %>?_method=PUT" method="post" novalidate 
                  class="needs-validation p-4 border rounded shadow-lg bg-info">
                
                <div class="mb-3">
                    <label for="name" class="form-label fw-bold text-black">Tool Name</label>
                    <input type="text" name="name" id="name" class="form-control" 
                           value="<%= sublistdata.name %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a tool name.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="work" class="form-label fw-bold text-black">Tool Work / Description</label>
                    <textarea name="work" id="work" class="form-control" rows="3" required><%= sublistdata.work %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a description of the work.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="link" class="form-label fw-bold text-black">Working Link (URL)</label>
                    <input type="url" name="link" id="link" class="form-control" 
                           value="<%= sublistdata.link %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid working link (URL).
                    </div>
                </div>
                
                <div class="mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label text-black" for="invalidCheck">
                            Agree to terms and conditions
                        </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-start align-items-center mt-4">
                    <button type="submit" class="btn btn-success me-3">
                        <i class="bi bi-save-fill me-1"></i> Save Sublisting
                    </button>
                    
                    <a href="/listing/admin" class="btn btn-outline-danger">
                        <i class="bi bi-x-circle-fill me-1"></i> Cancel
                    </a>
                </div>
            </form>
            </div>
    </div>
</main>