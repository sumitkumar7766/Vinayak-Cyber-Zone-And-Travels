<% layout("/layouts/boilerplateOwner.ejs") %>

    <main>
        <hr>
        <div class="navArea">
            <button class="btn btn-success me-3" id="onrender">Add New Sublisting</button>
            <div id="HidetheAddlistForm">
                <button class="btn btn-danger me-5" id="cancelButton">Cancel </button>
            </div>
            <form action="/owner/admin" method="get">
                <button class="btn btn-warning me-3" id="gobackbutton">Go Back !</button>
            </form>
            <button class="btn btn-danger me-3" id="editbuttinforSublisting">Edit !</button>
        </div>
        <div class="navbarofadmin1">
            <div id="forshowafterrenderbtnclick">
                <div class="col-9 offset-2">
                    <div class="offset-5 mt-5 mb-4 text-info text-decoration-underline">
                        <h1>Add New Sublisting</h1>
                    </div>
                    <form action="/owner/addlisting/<%= listing._id %>/sublisting" method="post" novalidate
                        class="needs-validation">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="sublisting[name]" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please Enter a title.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="work" class="form-label">Work</label>
                            <input type="text" name="sublisting[work]" id="work" class="form-control"
                                required></input>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please Enter a Description.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="link" class="form-label">Link</label>
                            <input type="text" name="sublisting[link]" id="" class="form-control"
                                required></input>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please Enter a Description.
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label" for="invalidCheck">
                                    Agree to terms and conditions
                                </label>
                                <div class="invalid-feedback">
                                    You must agree before submitting.
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-success mt-3">Add List</button>
                    </form>
                </div>
            </div>

        </div>
        <div id="ForshowtheToosl">
            <div>
                <div style="text-align: center;">
                    <h1 class="toolsHeading mt-2 mb-3">Tools</h1>
                </div>
            </div>
            <div style="display: flex; justify-content: center; width: 100%;">
                <div>
                    <table class="table table-dark table-bordered border-danger" style="width: 1500px;">
                        <thead>
                            <tr class="table-primary table-primary-headofthis">
                                <th style="width: 30%;">Tools Name</th>
                                <th style="width: 40%;">Tools Work</th>
                                <th style="width: 20%;">Working Button</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider border-danger">
                            <% for(sublisting of listing.sublisting) { %>
                                <tr class="table-info trbodyStyle">
                                    <td style="font-weight: bolder; font-size: 1.2rem;">
                                        <%= sublisting.name %>
                                    </td>
                                    <td>
                                        <%= sublisting.work %>
                                    </td>
                                    <td>
                                        <div class="displaythe-Buttoninshoe">
                                        <a href="<%= sublisting.link %>" target="_blank">
                                            <button class="btn btn-success">Apply !</button>
                                        </a>
                                        <form action="/listing/sublisting/<%= sublisting._id %>?_method=DELETE"
                                            method="POST" style="display: inline;">
                                            <button class="btn btn-danger ms-3" type="submit" id="deletebuttonofsublist">Delete</button>
                                        </form>
                                        <form action="/listing/sublisting/<%= sublisting._id %>/edit" method="get">
                                            <button class="btn btn-warning ms-3" id="editbtnofsublisting">Edit</button>
                                        </form>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
