<% layout("/layouts/boilerplateUser.ejs") %>

<main class="container py-5">
    
    <div class="d-flex justify-content-end align-items-center mb-5">
        
        <form action="/user/userhome">
            <button class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Go Back
            </button>
        </form>
        
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        <% for (listing of allListings) { %>
            <div class="col">
                <a href="/shopstock/user/listings/<%= listing._id %>" class="text-decoration-none">
                    <div class="card h-100 shadow-sm overflow-hidden product-card-hover">
                        
                        <div class="card-img-container">
                             <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                                style="height: 18rem; object-fit: cover;">
                        </div>

                        <div class="card-body">
                            <p class="card-text text-dark">
                                <b class="d-block mb-1 fs-5 text-primary"><%= listing.title %></b>
                                <span class="fw-bold text-success">Price: â‚¹ <%= listing.price %></span>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</main>