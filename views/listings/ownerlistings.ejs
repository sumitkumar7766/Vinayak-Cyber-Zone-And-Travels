<% layout("/layouts/boilerplateOwner.ejs") %>

   <main class="container py-5">
    
    <hr class="mb-4">
    
    <div class="d-flex flex-wrap align-items-center mb-5 gap-3">
        
        <form action="/shopstock/addproductform" method="get">
            <button class="btn btn-success" id="onrender">
                Add Product
            </button>
        </form>
        
        <form action="/owner/admin" method="get">
            <button class="btn btn-warning text-dark ms-lg-auto mt-3">
                Go Back !
            </button>
        </form>
        
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        <% for (listing of allListings) { %>
            <div class="col">
                <a href="/shopstock/listings/<%= listing._id %>" class="text-decoration-none">
                    <div class="card h-100 shadow-sm listing-card overflow-hidden product-card-hover">
                        
                        <div class="card-img-container">
                             <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                                style="height: 18rem; object-fit: cover;">
                        </div>

                        <div class="card-body">
                            <p class="card-text text-dark">
                                <b class="d-block mb-1 fs-5 text-primary"><%= listing.title %></b>
                                <span class="fw-bold text-success">Price: â‚¹ <%= listing.price %></span>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</main>