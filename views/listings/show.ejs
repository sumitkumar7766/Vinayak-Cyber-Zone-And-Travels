<% layout("/layouts/boilerplateOwner.ejs") %>
<main>
    
    <div class=" text-white py-5 mb-5 shadow-sm">
        <div class="container-fluid">
            <div class="d-flex justify-content-end mb-4">
                <form action="/shopstock/owner/listing">
                    <button class="btn btn-outline-warning">
                        <i class="bi bi-arrow-left me-1"></i> Go Back
                    </button>
                </form>
            </div>
            
            <div class="text-center">
                <h1 class="display-3 fw-bolder" id="listingtital">
                    Product Name: <%= listing.title %>
                </h1>
                <p class="lead text-warning fs-3">Product Details and Review Center</p>
            </div>
        </div>
    </div>
    
    <div class="container">
        
        <div class="d-flex flex-column flex-md-row bg-white border rounded-3 shadow-lg mb-5 p-4">
            
            <div class="me-md-5 mb-4 mb-md-0 flex-grow-0">
                <img src="<%= listing.image.url %>" class="img-fluid rounded-3" alt="listing_image"
                    style="max-height: 400px; width: 100%; object-fit: cover;" id="productimagesetup">
            </div>

            <div class="flex-grow-1">
                <div class="mb-4">
                    <h3 class="text-primary border-bottom pb-2 mb-3"> Product Description</h3>
                    <p class="lead text-black fw-bolder"><%= listing.description %></p>
                </div>

                <div class="mb-4">
                    <h3 class="text-secondary">Price</h3>
                    <p class="display-6 text-success fw-bolder">â‚¹ <%= listing.price %></p>
                </div>
                
                <div class="mt-4 pt-3 border-top">
                    <form action="/shopstock/listings/<%= listing._id %>?_method=DELETE" method="post" class="d-inline">
                        <button class="btn btn-danger btn-lg">
                            <i class="bi bi-trash-fill me-1"></i> Delete This Product
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <h2 class="text-info mb-4 border-bottom pb-2"><i class="bi bi-chat-dots-fill me-2"></i> Customer Reviews</h2>
            
            <div class="p-4 border rounded-3 shadow-sm bg-info mb-5">
                <h4 class="mb-3 text-black"><i class="fa-solid fa-comment text-black"></i> Leave a Review</h4>
                <hr>
                <form action="/shopstock/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    
                    <div class="mt-3 mb-4">
                        <label for="rating" class="form-label fw-bold text-black">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    
                    <div class="mb-4">
                        <label for="comment" class="form-label fw-bold text-black">Comment</label>
                        <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a comment.</div>
                    </div>
                    <button class="btn btn-success btn-lg w-100">
                        <i class="fa-solid fa-floppy-disk"></i> Submit Review
                    </button>
                </form>
            </div>

            <% if(listing.reviews.length> 0 ) { %>
                <h3 class="mb-4 text-white"><i class="fa-solid fa-comment text-white"></i> All Reviews (<%= listing.reviews.length %>)</h3>
                
                <div class="list-group">
                    <% for (review of listing.reviews) { %>
                        <div class="list-group-item list-group-item-action p-4 shadow-sm mb-3 bg-black">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <h5 class="mb-1 text-info fw-bold">
                                    <i class="fa-solid fa-circle-user text-info"></i> @<%= review.author.username %>
                                </h5>
                                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                            </div>
                            
                            <p class="mb-2 mt-2 text-light"><%= review.comment %></p>

                            <form
                                action="/shopstock/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="post" class="mt-2">
                                <button class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="alert alert-info border-0 shadow-sm">No reviews yet. Be the first to review this product!</div>
            <% } %>
        </div>
        
    </div>
</main>