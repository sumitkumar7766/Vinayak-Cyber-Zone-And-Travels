<% layout("/layouts/boilerplateOwner.ejs") %>

<main class="container my-5">
    
    <div class="row justify-content-center">
        
        <div class="col-lg-7 col-md-9">
            
            <div class="text-center mb-5">
                <h3 class="display-6 fw-bold text-warning border-bottom border-info pb-2">Add New Product</h3>
            </div>
            
            <form action="/shopstock/owner/listing" method="post" novalidate 
                  class="needs-validation p-4 border rounded shadow-lg " 
                  enctype="multipart/form-data">
                
                <div class="mb-3">
                    <label for="title" class="form-label fw-bold">Title</label>
                    <input type="text" name="shopstock[title]" id="title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a title for the product.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <textarea name="shopstock[description]" id="description" class="form-control" rows="4" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a product description.
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="image-upload" class="form-label fw-bold">Upload Image File</label>
                    <input type="file" name="shopstock[image]" id="image-upload" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please upload an image file.
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="price" class="form-label fw-bold">Enter Price</label>
                        <div class="input-group">
                            <span class="input-group-text">â‚¹</span>
                            <input type="text" name="shopstock[price]" id="price" class="form-control" placeholder="e.g., 1000.00" required>
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter the price.
                        </div>
                    </div>
                </div>
                
                <div class="mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">
                            Agree to terms and conditions
                        </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-cart-plus-fill me-2"></i> Add Product
                    </button>
                </div>

            </form>
            </div>
    </div>
</main>