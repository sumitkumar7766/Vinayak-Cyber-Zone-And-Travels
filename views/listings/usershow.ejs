<% layout("/layouts/boilerplateUser.ejs") %>
<main class="container-fluid py-5">
    
    <div class="text-white py-4 mb-5 shadow-lg">
        <div class="container">
            <div class="d-flex justify-content-end">
                <form action="/shopstock/user/listing">
                    <button class="btn btn-outline-warning btn-lg ">
                        Go Back
                    </button>
                </form>
            </div>
            
            <div class="text-center mt-3">
                <h1 class="display-3 fw-bolder text-warning border-bottom pb-2" id="listingtital">
                    Product Name: <%= listing.title %>
                </h1>
            </div>
        </div>
    </div>
    
    <div class="container">
        
        <div class="card bg-info border-0 rounded-3 shadow-lg mb-5">
            <div class="card-body p-5">
                
                <div class="text-center mb-4">
                    <img src="<%= listing.image.url %>" class="img-fluid rounded-3 shadow-sm" alt="listing_image"
                        style="max-height: 500px; width: 100%; object-fit: cover;" id="productimagesetup">
                </div>

                <div class="mt-4 pt-4 border-top">
                    <h3 class="text-black mb-3 fw-bolder">Description</h3>
                    <p class="lead mb-4 fw-bold"><%= listing.description %></p>
                    
                    <h3 class="text-primary mb-2">Price</h3>
                    <p class="display-5 text-warning fw-bolder">â‚¹ <%= listing.price %></p>
                </div>
            </div>
        </div>

        <div class="card p-4 border rounded-3 shadow-sm bg-light mb-5">
            <div class="card-body">
                <h2 class="mb-3 text-dark"> Leave a Review</h2>
                <hr>
                <form action="/shopstock/listings/<%= listing._id %>/reviews/user" method="post" novalidate class="needs-validation">
                    
                    <div class="mt-3 mb-4">
                        <label for="rating" class="form-label fw-bold text-black">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" /><label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" /><label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" /><label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" /><label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" /><label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    
                    <div class="mb-4">
                        <label for="comment" class="form-label fw-bold text-black">Comment</label>
                        <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a comment.</div>
                    </div>
                    <button class="btn btn-success btn-lg w-100">
                        Submit
                    </button>
                </form>
            </div>
            
        <% if(listing.reviews.length> 0 ) { %>
            <h2 class="mb-4 text-dark">All Reviews (<%= listing.reviews.length %>)</h2>
            
            <div class="list-group">
                <% for (review of listing.reviews) { %>
                    <div class="list-group-item list-group-item-action p-4 shadow-sm mb-3 border-0 rounded-3">
                        <div class="d-flex w-100 justify-content-between align-items-center mb-2">
                            <h5 class="mb-1 text-primary fw-bold">
                               @<%= review.author.username %>
                            </h5>
                            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        </div>
                        
                        <p class="mb-3 text-dark"><%= review.comment %></p>

                        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                            <form
                                action="/shopstock/listings/<%= listing._id %>/reviews/user/<%= review._id %>?_method=DELETE"
                                method="post" class="mt-2">
                                <button class="btn btn-sm btn-outline-danger">
                                    Delete This
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <div class="alert alert-info border-0 shadow-sm">No reviews yet. Be the first to review this product!</div>
        <% } %>
        
    </div>
</main>